{
  "kind": "collectionType",
  "collectionName": "comments",
  "info": {
    "singularName": "comment",
    "pluralName": "comments",
    "displayName": "Comment",
    "description": "Article comments for E2E testing"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "content": {
      "type": "text",
      "required": true,
      "maxLength": 1000
    },
    "approved": {
      "type": "boolean",
      "default": false
    },
    "author_name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "article": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::article.article",
      "inversedBy": "comments"
    }
  }
}
